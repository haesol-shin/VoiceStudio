{
  "model": {
    "multimodal": {
      "text_encoder_name": "klue/roberta-large",
      "audio_encoder_dim": 512,
      "fusion_dim": 768,
      "fusion_method": "cross_attention",
      "dropout": 0.1,
      "use_projection": true
    },
    "hypernetwork": {
      "condition_dim": 768,
      "hidden_dim": 512,
      "num_layers": 3,
      "dropout": 0.1,
      "activation": "gelu",
      "layer_norm": true
    },
    "target_model": {
      "lora_rank": 16,
      "lora_alpha": 32,
      "lora_dropout": 0.1
    },
    "use_cache": true,
    "cache_size": 1000
  },
  "training": {
    "dataset_path": "./data/training",
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "max_samples": null,
    "batch_size": 8,
    "learning_rate": 1e-4,
    "num_epochs": 50,
    "warmup_steps": 1000,
    "weight_decay": 0.01,
    "gradient_clip_norm": 1.0,
    "optimizer": "adamw",
    "scheduler": "cosine",
    "loss_type": "mse",
    "loss_weights": {
      "reconstruction": 1.0,
      "regularization": 0.1
    },
    "output_dir": "./outputs",
    "logging_dir": "./logs",
    "logging_steps": 50,
    "save_steps": 1000,
    "eval_steps": 500,
    "save_total_limit": 3,
    "eval_strategy": "steps",
    "metric_for_best_model": "eval_loss",
    "greater_is_better": false,
    "early_stopping_patience": 5,
    "device": "auto",
    "mixed_precision": true,
    "dataloader_num_workers": 4,
    "pin_memory": true,
    "distributed": false,
    "seed": 42,
    "use_wandb": true,
    "wandb_project": "latentforge-t2a-lora",
    "wandb_run_name": null,
    "wandb_tags": [],
    "use_data_augmentation": true,
    "augmentation_config": {}
  },
  "generation": {
    "lora_rank": 16,
    "lora_alpha": 32.0,
    "lora_dropout": 0.1,
    "target_modules": ["q_proj", "k_proj", "v_proj", "out_proj"],
    "batch_size": 1,
    "max_text_length": 512,
    "truncation": true,
    "padding": true,
    "audio_sample_rate": 22050,
    "audio_hop_length": 256,
    "audio_win_length": 1024,
    "n_mels": 80,
    "output_format": "wav",
    "output_sample_rate": 22050,
    "normalize_audio": true,
